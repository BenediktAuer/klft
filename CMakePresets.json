{
    "version": 8,
    "configurePresets": [
        {
            "name": "debug",
            "hidden": true,
            "displayName": "Debug",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "displayName": "Release",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang-debug",
            "inherits": "debug",
            "displayName": "Debug with Clang 19",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19"
            }
        },
        {
            "name": "release-serial",
            "inherits": "release",
            "displayName": "Clang 19 Release serial",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "Kokkos_ENABLE_SERIAL": "ON",
                "Kokkos_ARCH_NATIVE": "ON"
            }
        },
        {
            "name": "release-OMP",
            "inherits": "release",
            "displayName": "Clang 19 Release OMP",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "Kokkos_ENABLE_SERIAL": "OFF",
                "Kokkos_ENABLE_OPENMP": "ON",
                "Kokkos_ARCH_NATIVE": "ON"
            }
        },
        {
            "name": "release-OMP-Polly",
            "inherits": "release",
            "displayName": "Clang 19 Release OMP and Polly",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "Kokkos_ENABLE_SERIAL": "OFF",
                "Kokkos_ENABLE_OPENMP": "ON",
                "Kokkos_ARCH_NATIVE": "ON",
                "CMAKE_CXX_FLAGS": " -O3 -mllvm -polly"
            }
        },
        {
            "name": "release-CUDA",
            "inherits": "release",
            "displayName": "Clang 19 Release CUDA",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "Kokkos_ENABLE_SERIAL": "OFF",
                "Kokkos_ENABLE_OPENMP": "ON",
                "Kokkos_ENABLE_CUDA": "ON",
                "Kokkos_ARCH_NATIVE": "ON"
            }
        },
        {
            "name": "release-CUDA-14",
            "inherits": "release",
            "displayName": "Clang 14 Release CUDA",
            "description": "Using compilers: C = /usr/bin/clang-14, CXX = /usr/bin/clang++-14",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-14",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-14",
                "Kokkos_ENABLE_SERIAL": "ON",
                "Kokkos_ENABLE_OPENMP": "OFF",
                "Kokkos_ENABLE_CUDA": "ON",
                "Kokkos_ARCH_NATIVE": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "description": "Build debug",
            "displayName": "Debug",
            "configurePreset": "clang-debug",
            "configuration": "Debug"
        },
        {
            "name": "release-OMP",
            "displayName": "Build Release OMP",
            "configurePreset": "release-OMP",
            "configuration": "Release"
        },
        {
            "name": "release-serial",
            "displayName": "Build Release serial",
            "configurePreset": "release-serial",
            "configuration": "Release"
        },
        {
            "name": "release-CUDA-14",
            "displayName": "Build Release CUDA-14",
            "configurePreset": "release-CUDA-14",
            "configuration": "Release"
        }
    ]
}